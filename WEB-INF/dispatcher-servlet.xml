       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

     <context:annotation-config/>
     <context:component-scan base-package="com.finlogic"/>
     <mvc:annotation-driven/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->

    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="login.fin">loginController</prop>
                <prop key="logout.fin">logoutController</prop>
                <prop key="welcome.fin">welcomeController</prop>
                <prop key="connaudit.fin">connAuditController</prop>
                <prop key="reportgenerator.fin">reportGeneratorController</prop>
                <prop key="dataimport.fin">dataImportController</prop>
                <prop key="mastergenerator.fin">MasterGeneratorController</prop>
                <prop key="mastergeneratorV2.fin">MasterGeneratorV2Controller</prop>
                <prop key="dataexport.fin">dataExportController</prop>
                <prop key="jquerydemo.fin">jqueryDemoController</prop>
                <prop key="serverAccessAuditReport.fin">serverAccessAuditReport</prop>
                <prop key="repgenv2.fin">finreportController</prop>
                <prop key="linkchecker.fin">linkchecker</prop>
                <prop key="scriptgen.fin">scriptgen</prop>
		<prop key="mobapps.fin">mobappsController</prop>
		<prop key="finstudiomur.fin">finstudioMUR</prop>
		<prop key="mstgenv2.fin">finmasterController</prop>
		<prop key="servicelist.fin">commonController</prop>
		<prop key="webservice.fin">webserviceController</prop>
		<prop key="oracleToMySql.fin">oracleToMySql</prop>
                <prop key="add_finfiletransfer.fin">finFileTransfer</prop>
                <prop key="view_finfiletransfer.fin">finFileTransfer</prop>
		<prop key="repgenv3.fin">finDhtmlReport</prop>
		<prop key="webservicegen.fin">webserviceController</prop>
		<prop key="findatareqexec.fin">finDataReqExecController</prop>
		<prop key="exec_findatareqexec.fin">finDataReqExecController</prop>
		<prop key="dbmdi.fin">DBMetadataController</prop>
		<prop key="finstudiostatistics.fin">finstatisticsController</prop>
		<prop key="dbmc.fin">dbmComparatorController</prop>
		<prop key="filedirar.fin">finserverentry</prop>
		<prop key="filedirarexe.fin">finserverentry</prop>
		<prop key="webservicedoc.fin">webservicedoc</prop>

		<prop key="generatepdfmodule.fin">generatePdfController</prop>
		<prop key="generatepdfClientAdd.fin">generatePdfController</prop>
		<prop key="generatepdf.fin">generatePdfController</prop>
		<prop key="generatepdfReport.fin">generatePdfController</prop>
		<prop key="dbobjversionrpt.fin">DBObjVersionRptController</prop>
		<prop key="blockmodules.fin">blockModulesController</prop>
		<prop key="blockmodulesAdd.fin">blockModulesController</prop>
		<prop key="blockmodulesRpt.fin">blockModulesController</prop>
		<prop key="blockmodulesAuth.fin">blockModulesController</prop>
		<prop key="etljoblist.fin">ETLJobListController</prop>
		<prop key="etljobmaster.fin">ETLJobListController</prop>
           </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />

    <bean id = "methodNameResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
        <property name="paramName">
            <value>cmdAction</value>
        </property>
        <property name="defaultMethodName">
            <value>defaultMethod</value>
        </property>
    </bean>

    <bean id="multipartResolver"
          class="org.springframework.web.multipart.commons.CommonsMultipartResolver" />


    <bean name="loginController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
